<h3 class="border-bottom border-1"><%= @restaurant.name %>
<%= link_to '  - Leave a review', new_restaurant_review_path(@restaurant) %></h3>
<p>Address: <%= @restaurant.address %></p>
<p>Cuisine: <%= @restaurant.category.capitalize %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>


<h4 class="border-bottom border-1">Reviews</h4>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %><div class="align-text: right;"><%= review.rating %></div></li>
  <% end %>
</ul>

